{
	"name": "obsidian-plugin-sorty",
	"version": "1.1.0",
	"description": "An Obsidian plugin that implements various types of text sorting",
	"main": "dist/main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"test": "jest",
		"lint": "eslint .",
		"format": "prettier --write \"**/*.{ts,js,json,md}\"",
		"format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
		"prepare": "husky",
		"version": "node version-bump.mjs && git add manifest.json versions.json"
	},
	"keywords": [
		"obsidian",
		"plugin",
		"sorting",
		"tasks",
		"markdown",
		"text-editor"
	],
	"author": "Eric Wannemacher",
	"license": "MIT",
	"lint-staged": {
		"*.{ts,js}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{json,md}": [
			"prettier --write"
		]
	},
	"devDependencies": {
		"@eslint/js": "^9.39.1",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.10.1",
		"@typescript-eslint/eslint-plugin": "^8.48.1",
		"@typescript-eslint/parser": "^8.48.1",
		"builtin-modules": "5.0.0",
		"esbuild": "^0.27.0",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"globals": "^16.5.0",
		"husky": "^9.1.7",
		"jest": "^30.2.0",
		"lint-staged": "^16.2.7",
		"obsidian": "latest",
		"prettier": "^3.7.3",
		"ts-jest": "^29.4.6",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.48.1"
	}
}
